{
  "name": "universal-renderer",
  "version": "0.5.0",
  "description": "Server-Side Rendering (SSR) server for the universal_renderer Ruby gem.",
  "license": "MIT",
  "author": "thaske",
  "homepage": "https://github.com/thaske/universal_renderer#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thaske/universal_renderer.git"
  },
  "bugs": "https://github.com/thaske/universal_renderer/issues",
  "scripts": {
    "build": "tsdown",
    "watch": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.mts"
    },
    "./http": {
      "bun": {
        "import": "./dist/http/bun/index.mjs",
        "require": "./dist/http/bun/index.js",
        "types": "./dist/http/bun/index.d.mts"
      },
      "node": {
        "import": "./dist/http/express/index.mjs",
        "require": "./dist/http/express/index.js",
        "types": "./dist/http/express/index.d.mts"
      },
      "default": {
        "import": "./dist/http/express/index.mjs",
        "require": "./dist/http/express/index.js",
        "types": "./dist/http/express/index.d.mts"
      }
    },
    "./stdio": {
      "bun": {
        "import": "./dist/stdio/bun/index.mjs",
        "require": "./dist/stdio/bun/index.js",
        "types": "./dist/stdio/bun/index.d.mts"
      },
      "node": {
        "import": "./dist/stdio/node/index.mjs",
        "require": "./dist/stdio/node/index.js",
        "types": "./dist/stdio/node/index.d.mts"
      },
      "default": {
        "import": "./dist/stdio/node/index.mjs",
        "require": "./dist/stdio/node/index.js",
        "types": "./dist/stdio/node/index.d.mts"
      }
    },
    "./http/bun": {
      "import": "./dist/http/bun/index.mjs",
      "require": "./dist/http/bun/index.js",
      "types": "./dist/http/bun/index.d.mts"
    },
    "./http/express": {
      "import": "./dist/http/express/index.mjs",
      "require": "./dist/http/express/index.js",
      "types": "./dist/http/express/index.d.mts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vite": "^6.3.5",
    "express": "^4.18.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.6",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^15.0.0",
    "@types/express": "^4.17.0",
    "@types/node": "^22.15.18",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "jsdom": "^24.0.0",
    "express": "^4.18.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "prettier": "^3.5.3",
    "tsdown": "^0.11.11",
    "typescript": "^5.8.3",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "express",
    "bun",
    "react",
    "server-side-rendering",
    "ssr",
    "vite"
  ],
  "publishConfig": {
    "access": "public"
  }
}
